{
	"flex": {
		"style": {
			"display": "flex"
		}
	},
	"h-1/2": {
		"style": {
			"height": "50%"
		}
	},
	"w-1/2": {
		"style": {
			"width": "50%"
		}
	},
	"w-full": {
		"style": {
			"width": "100%"
		}
	},
	"flex-1": {
		"style": {
			"flexGrow": 1,
			"flexShrink": 1,
			"flexBasis": "0%"
		}
	},
	"flex-row": {
		"style": {
			"flexDirection": "row"
		}
	},
	"flex-wrap": {
		"style": {
			"flexWrap": "wrap"
		}
	},
	"justify-start": {
		"style": {
			"justifyContent": "flex-start"
		}
	},
	"justify-center": {
		"style": {
			"justifyContent": "center"
		}
	},
	"justify-around": {
		"style": {
			"justifyContent": "space-around"
		}
	},
	"border-2": {
		"style": {
			"borderTopWidth": 2,
			"borderRightWidth": 2,
			"borderBottomWidth": 2,
			"borderLeftWidth": 2
		}
	},
	"bg-primary": {
		"style": {
			"--tw-bg-opacity": 1,
			"backgroundColor": "rgb(127 29 29 / var(--tw-bg-opacity))"
		}
	},
	"bg-secondary": {
		"style": {
			"--tw-bg-opacity": 1,
			"backgroundColor": "rgb(231 229 228 / var(--tw-bg-opacity))"
		}
	},
	"p-2": {
		"style": {
			"paddingTop": 8,
			"paddingRight": 8,
			"paddingBottom": 8,
			"paddingLeft": 8
		}
	},
	"p-3": {
		"style": {
			"paddingTop": 12,
			"paddingRight": 12,
			"paddingBottom": 12,
			"paddingLeft": 12
		}
	},
	"text-center": {
		"style": {
			"textAlign": "center"
		}
	},
	"text-lg": {
		"style": {
			"fontSize": 18,
			"lineHeight": 28
		}
	},
	"text-xl": {
		"style": {
			"fontSize": 20,
			"lineHeight": 28
		}
	},
	"font-bold": {
		"style": {
			"fontWeight": "700"
		}
	},
	"font-semibold": {
		"style": {
			"fontWeight": "600"
		}
	},
	"text-primary": {
		"style": {
			"--tw-text-opacity": 1,
			"color": "rgb(127 29 29 / var(--tw-text-opacity))"
		}
	},
	"text-secondary": {
		"style": {
			"--tw-text-opacity": 1,
			"color": "rgb(231 229 228 / var(--tw-text-opacity))"
		}
	}
}